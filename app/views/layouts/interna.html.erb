	<div id="Category">
		<%=render :file => "layouts/_menu_interna.html.erb"%>         
	</div>
		<div class="clear"></div>
	</div>
    </div>
	<!-- FOOTER -->
	<%=render :file => "layouts/_footer.html.erb"%>
