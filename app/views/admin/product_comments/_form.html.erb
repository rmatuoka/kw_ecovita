<%= form_for ([:admin,@product_comment]) do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.text_field :comment, :readonly => :true, :style => "width:100%; height:100px;" %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id, :readonly => :true %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p><%= f.submit %></p>
<% end %>
