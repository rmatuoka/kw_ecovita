<%=form_for @user do |f|%>
<div id="Form">
		
        <div id="Form_box">
            <label>Nome completo: <%=f.text_field :nome, :class => "Item_form"%></label>
            <br /><br />
            <label>Data de Nascimento: <%= f.date_select :nascimento, :start_year => 1920%></label>
            <br /><br />
            <label>Telefone: <%=f.text_field :phone, :class => "Item_form" %></label>
            <br /><br />
            <label>Endereço: <%=f.text_field :address, :class => "Item_form"%></label>
            <br /><br />
            <label>Bairro: <%=f.text_field :quarter, :class => "Item_form"%></label>
            <br /><br />
            <label style=" vertical-align:middle;">Uf:</label>
            <select name="items por pagina" style=" text-align:left;">
                <option value="SP">SP</option>
                <option value="MG">MG</option>
                <option value="RS">RS</option>
                <option value="TO">TO</option>
            </select>
        	<label>Cep: <%=f.text_field :cep, :class => "Item_form"%></label>
        </div> 
		<div id="Form_box2">
        <label>Sexo: 
			<%= f.radio_button :sexo, :masculino %>
			<b style="font-weight:normal; font-size:12px; color:#000;"> Masculino</b> 
			<%= f.radio_button :sexo, :feminino %>
			<b style="font-weight:normal; font-size:12px; color:#000;"> Feminino</b></label>
        <br /><br />
        <label>Email: <%=f.text_field :email, :class => "Item_form"%></label>
        <br /><br /> 
        <label>Celular: <%=f.text_field :cellphone, :class => "Item_form"%></label>
		<br /><br /> 
        <label>Nº: <%=f.text_field :number, :class => "N"%></label>&nbsp;<label>Complemento: <%=f.text_field :complement, :class => "N"%></label>
       	<br /><br /> 
        <label>Cidade: <%=f.text_field :city, :class => "Item_form"%> </label>  	
   		</div> 
 </div>
 <div class="Box_password">
	<div style="position:relative;  width: 340px; top: 5px; float: left;">
		<%= f.label :password, "Senha:" %>
		<%=f.password_field :password, :class => "Item_form"%>
	</div>
	<div style="position:relative;  width: 340px; top: 5px; float: left;">
		<%= f.label :password, "Repita Senha:" %>
	 	<%=f.password_field :password_confirmation, :class => "Item_form"%>
	</div>
 </div>
<%=image_submit_tag "bt_finalizar_cadastro.png", :stlyle => "margin-left:60px; float:right;"%>
<input type="reset" value="" style="background-color:transparent; background-image:url('/images/bt_limpar_cadastro.png'); border:none; width:212px; height:32px;text-align:right; margin-left:220px; float:left; cursor:pointer;">


<%end%>