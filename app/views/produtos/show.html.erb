<%end%>

<%content_for :head do%>
	<%=stylesheet_link_tag "rating"%>
	<%=javascript_include_tag "rating"%>
	<script>
	$(document).ready(function() {
	    // Hides the submit button
	    $('.new_rating').children('input[type=submit]').addClass('hide');

		<%if !current_user %>
			$('.star').rating('disable');
			$('.star').click(function(){
			        alert("Você precisa estar logado para avaliar um produto!");
			    });
		<%else%>
			// Submits the form (saves data) after user makes a change.
		  $('.star').click(function(){
		        form = $(this).parent().parent();
		        form[0].submit();
		    });
		<%end%>
	
		$('a.iframe').fancybox({
			'width'		: 500,
			'height'	: 280,
			'centerOnScroll' : true
		});
		
		$('#comments_form').click(function(){
			$('#Form_Comments').fadeIn('slow');
		});
		
		//MOSTRA COMENTARIOS
		// Inicia o validador ao carregar a página
		$(function() {
			// valida o formulário
			$('#new_product_comment').validate({
				// define regras para os campos
				rules: {
					product_comment[name]: {
						required: true,
						minlength: 2
					},
					product_comment[email]: {
						required: true,
						email: true
					},
					product_comment[comment]: {
						required: true
					}
				},
				// define messages para cada campo
				messages: {
					product_comment[name]: "Preencha o seu nome",
					product_comment[email]: "Preencha seu e-mail de contato",
					product_comment[comment]: "Insira algum comentário no campo!"
				}
			});
		});		
	});
	</script>
<%end%>
